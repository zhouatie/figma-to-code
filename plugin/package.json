{
  "name": "figma-to-code-plugin",
  "version": "1.0.0",
  "description": "Figma plugin to extract design data for code generation",
  "scripts": {
    "dev": "concurrently \"npm run dev:code\" \"npm run dev:ui\"",
    "dev:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --watch",
    "dev:ui": "vite build --watch",
    "build": "npm run build:ui && npm run build:code",
    "build:code": "node esbuild.config.js",
    "build:ui": "vite build",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.89.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.10",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
